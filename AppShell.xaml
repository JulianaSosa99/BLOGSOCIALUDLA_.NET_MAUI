<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="BLOGSOCIALUDLA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BLOGSOCIALUDLA.Views"
    Title="BLOGSOCIALUDLA"
    Shell.FlyoutBehavior="Disabled">

    
    <TabBar>
        <!-- Pestaña para los posts de FICA -->
        <Tab Title="Posts" Icon="poster.jpg">
            <ShellContent ContentTemplate="{DataTemplate views:PostsPrincipales}" />
        </Tab>

        <!-- Pestaña para el Mapa -->
        <Tab Title="Sedes" Icon="ubicacion.jpg">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}" />
        </Tab>

        <!-- Pestaña para la Vista del Usuario -->
        <Tab Title="Usuario" Icon="usuario.jpg">
            <ShellContent ContentTemplate="{DataTemplate views:UsuarioView}" />
        </Tab>
    </TabBar>
</Shell>
